@model IEnumerable<LibraryManagementSystem.Data.Entities.Book>
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css">
    <style>
        #booksTable {
            border-collapse: collapse !important;
        }

            #booksTable th,
            #booksTable td {
                border: 1px solid #ddd !important;
                padding: 8px;
            }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#booksTable').DataTable();
        });
    </script>
</head>
<div class="container" style="height:600px;">
    <h2>Viewing Books</h2>
    <hr />
    <table id="booksTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>BookId</th>
                <th>BookName</th>
                <th>AuthorName</th>
                <th>Publishing</th>
                <th>Price</th>
                <th>Subject</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.BookName</td>
                    <td>@book.AuthorName</td>
                    <td>@book.Publishing</td>
                    <td>@book.Price</td>
                    <td>@book.Subject</td>
                    @*<td>
                        <a href="@Url.Action("Index", "IssueBooks", new { id = book.BookId })" class="btn btn-primary">Assign Book</a>
                    </td>*@
                   @* <td>
                        <a href="@Url.Action("Index", "IssueBooks", new { bookId = book.BookId })" class="btn btn-primary">Assign Book</a>
                    </td>*@
                    <td>
                        <a href="@Url.Action("Index", "IssueBooks", new { bookId = book.BookId })" class="btn btn-primary">Assign Book</a>
                        <input type="hidden" id="selectedBookId" value="@book.BookId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css">

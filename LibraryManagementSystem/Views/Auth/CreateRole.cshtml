@model LibraryManagementSystem.SharedModels.Models.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="col-form-label"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Role Name">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="margin-top: 10px;">
                    Create Role
                </button>
            </div>
        </form>
    </div>
</div>
